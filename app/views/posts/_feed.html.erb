<div class="box">
  <article class="media box">
    <figure class="media-left">
      <% @posts.each do | post | %>
        <div class="card">
          <div class="card-body">
            <p class="image is-64x64">
              <img src="https://bulma.io/images/placeholders/64x64.png" style="border-radius: 50%">
            </p>
            <h5 class="card-title">USER NAME HERE</h5>
            <h6 class="card-subtitle mb-2 text-muted">@USERNAME HERE</h6>
            <p class="card-text"><%= post.content%></p>
            <%= link_to 'Edit', edit_post_path(post), class: "btn btn-dark btn-secondary btn-sm" %>
            <%= link_to 'Destroy', post, method: :delete, data: { confirm: 'Are you sure you want to delete this post??' }, 
            class: "btn btn-dark btn-secondary btn-sm"  %>
          </div>
        </div>
      <%end%>
    </figure>
  </article>
</div>
